<form action="login.pl" method="post" >
  <fieldset>
    <legend>Login</legend>
    <p>
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" placeholder="Inserire nome utente" />
    </p>
    <p>
      <label for="passwd">Password:</label>
      <input type="password" id="passwd" name="passwd" placeholder="Inserire password" />
      <input type="hidden" id="page" name="page" value="<tmpl_var name = page>">
    </p>
    <p>
      <input type="submit" value="sign in" />
    </p>
  </fieldset>
</form>
