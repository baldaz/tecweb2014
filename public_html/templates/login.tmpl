<form action="login.pl" method="post" onsubmit="return validateLogin()" name="loginfrm" id="loginfrm" >
  <fieldset>
    <legend>Area personale</legend>
    <div class="formgroup">
      <label for="lg-email">E-Mail:</label>
      <input type="text" id="lg-email" name="lg-email" placeholder="E-Mail" />
    </div>
    <div class="formgroup">
      <label for="passwd">Password:</label>
      <input type="password" id="passwd" name="passwd" placeholder="Password" />
      <input type="hidden" id="page" name="page" value="<tmpl_var name = page>" />
    </div>
    <div class="formgroup">
      <input type="submit" value="Accedi" class="button" />
      <a href="load.cgi?page=registrazione" title="Registrati"><input type="button" class="button" value="Registrati" /></a>
    </div>
  </fieldset>
</form>
<tmpl_if name = "attempt">
    <div class="errore">Username e/o password errati</div>
</tmpl_if>
