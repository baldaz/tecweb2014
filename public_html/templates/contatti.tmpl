<div id="content">
  <div class="form-container">
    <h2>Contatti</h2>
    <p>
      Indirizzo, mappa?
    </p>
    <form class="prenfrm" action="" method="post" name="contattaci" onsubmit="return validate_contact()" id="contattaci" >
      <fieldset>
	<legend>Contattaci</legend>
	<div class="formgroup">
	  <label for="email">E-Mail:</label>
	  <input type="text" name="email" id="email" value="<tmpl_var escape = html name = email>"/>
	</div>
	<div class="formgroup">
	  <label for="message">Messaggio:</label>
	  <textarea name="message" id="message" cols="50"></textarea>
	</div>
	<div class="formgroup">
	  <input type="reset" value="Resetta" class="button" />
	  <input type="submit" value="Invia" class="button" />
	</div>
      </fieldset>
    </form>
    <tmpl_if name = "error">
      <div class="errore">Errore nel form</div>
    </tmpl_if>
  </div>
</div>	
